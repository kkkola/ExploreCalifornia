@model ExploreCaliforniaNow.Models.Post[]
@{
    Layout = "_Layout";
}
@section Header{
<h1>Explore our world your way</h1>
<a href="/tours.htm" title="Find your tour!"><h2>Find your tour</h2></a>
}
<h1>Explorer's Blog</h1>
<p>Below are some of the blogs from some of our Explorers</p>
<p class="pager">
    @if(ViewBag.HasPreviousPage)
    { <a class="prev" href="@Url.Action("Index","Blog",new { page=ViewBag.PreviousPage})" >Previous</a>}
    @if(ViewBag.HasNextPage)
    {
        <a class="next" href="@Url.Action("Index","Blog",new {page=ViewBag.NextPage })">Next</a>
    }
</p>
@foreach(var p in Model)
{
@await Html.PartialAsync("_post",p)
}